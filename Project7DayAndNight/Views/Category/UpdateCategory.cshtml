@model Project7DayAndNight.Models.DataModels.Category 
@{
    ViewBag.Title = "UpdateCategory";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>


<div class="container mt-3">
    <h2>Kategori Güncelle</h2>
    <br />
    <form method="post">

        @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control", type = "hidden" })

        <label>Kategori adı</label>

        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        <br />
    
        <button class="btn btn-primary">Kategori Guncelle</button>
    </form>
</div>