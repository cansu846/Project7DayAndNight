@model Project7DayAndNight.Models.DataModels.Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = null;

}



<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>


<div class="container mt-3">
    <h2>Urun Güncelle</h2>
    <br />
    <form method="post">

        @Html.TextBoxFor(x => x.ProductId, new { @class = "form-control", type = "hidden" })

        <label>Urun adı</label>

        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        <br />
        <label>Urun Fiyatı</label>
        @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control", type = "number", step = "0.01" })
        <br />

        <label>Urun Stogu</label>
        @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control", type = "number" })
        <br />
        <button class="btn btn-primary">Urun Guncelle</button>
    </form>
</div>